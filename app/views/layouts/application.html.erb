<!DOCTYPE html>
<html>
  <head>
    <title>Newsal</title>
    <%= stylesheet_link_tag "application", media: 'all' %>
    <%= stylesheet_link_tag "mycss/#{controller.controller_name}_#{controller.action_name}.css" , :media => "all"%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
<body>
    <%= render 'layouts/header' %>
    <div class="container">
      
      
      <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      
      <%= yield %>
    </div>
</body>
</html>