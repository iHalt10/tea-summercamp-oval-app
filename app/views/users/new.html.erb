<%= stylesheet_link_tag "mycss/signup.css" , :media => "all"%>
<div class="backover"></div>
<%= form_for(@user, :html => {:class => "form-content"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class = "form-group">
      <i class="fa fa-user-o" aria-hidden="true"></i>
      <%= f.label :name ,"User Name"%>
      <%= f.text_field :name, class: 'form-control', :placeholder => "User Name" %>
    </div>
    <div class = "form-group">
      <i class="fa fa-envelope-o" aria-hidden="true"></i>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', :placeholder => "Email" %>
    </div>
    <div class="form-group">
      <i class="fa fa-key" aria-hidden="true"></i>
      <%= f.label :password,"Password" %>
      <%= f.password_field :password, class: 'form-control' , :placeholder => "Password" %>
    </div>
    <div class = "form-group">
      <i class="fa fa-check" aria-hidden="true"></i>
      <%= f.label :password_confirmation, "Confirm" %>
      <%= f.password_field :password_confirmation, class: 'form-control' , :placeholder => "confirm" %>
    </div>
    <%= f.submit "Sign Up", class: "btn btn-default", id: "btn-margin" %>
<% end %>