<div class="backover"></div>
<%= form_for(@user, :html => {:class => "form-content"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class = "form-group">
      <%= f.label :name ,"User Name"%>
      <%= f.text_field :name, :class => 'form-control', :placeholder => "User Name" %>
    </div>
    <div class = "form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :class => 'form-control', :placeholder => "Email" %>
    </div>
    <div class="form-group">
      <%= f.label :password,"Password" %>
      <%= f.password_field :password, :class => 'form-control' , :placeholder => "Password" %>
    </div>
    <div class = "form-group">
      <%= f.label :password_confirmation, "Confirm" %>
      <%= f.password_field :password_confirmation, :class => 'form-control' , :placeholder => "confirm" %>
    </div>
    <%= f.submit "Sign Up", class: "btn btn-default", id: "btn-margin" %>
<% end %>